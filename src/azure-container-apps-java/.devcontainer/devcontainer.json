{
  "name": "Azure Container Apps - Java",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "JAVA_VERSION": "${templateOption:javaVersion}",
      "MAVEN_VERSION": "${templateOption:mavenVersion}"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "${templateOption:javaVersion}",
      "installMaven": "true",
      "mavenVersion": "${templateOption:mavenVersion}",
      "installGradle": "${templateOption:installGradle}"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },
    "ghcr.io/azure/azure-dev/azd:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven",
        "vscjava.vscode-spring-initializr",
        "vscjava.vscode-spring-boot-dashboard",
        "pivotal.vscode-boot-dev-pack",
        "ms-azuretools.vscode-azurecontainerapps",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-vscode.azure-account",
        "editorconfig.editorconfig",
        "eamodio.gitlens"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-${templateOption:javaVersion}",
            "path": "/usr/lib/jvm/msopenjdk-${templateOption:javaVersion}",
            "default": true
          }
        ]
      }
    }
  },
  "postCreateCommand": "git config --global push.autoSetupRemote true && az extension add --name containerapp --upgrade || true",
  "remoteUser": "vscode"
}
