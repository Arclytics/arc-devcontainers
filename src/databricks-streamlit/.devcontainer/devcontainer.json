{
  "name": "Databricks with Streamlit",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "DATABRICKS_CLI_VERSION": "${templateOption:databricksCLIVersion}",
      "STREAMLIT_VERSION": "${templateOption:streamlitVersion}"
    }
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "databricks.databricks",
        "editorconfig.editorconfig",
        "ms-vscode.makefile-tools",
        "ms-vscode.azure-account",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "charliermarsh.ruff"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "none",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "python.testing.pytestEnabled": true
      }
    }
  },
  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": {
      "label": "Streamlit",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "git config --global push.autoSetupRemote true && pre-commit install --install-hooks || true",
  "remoteEnv": {
    "DATABRICKS_HOST": "${localEnv:DATABRICKS_HOST}",
    "DATABRICKS_TOKEN": "${localEnv:DATABRICKS_TOKEN}"
  },
  "remoteUser": "vscode"
}
