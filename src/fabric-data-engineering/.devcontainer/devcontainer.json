{
  "name": "Microsoft Fabric Data Engineering",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "FABRIC_CLI_VERSION": "${templateOption:fabricCLIVersion}",
      "INSTALL_SPARK_LOCALLY": "${templateOption:installSparkLocally}"
    }
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "editorconfig.editorconfig",
        "ms-vscode.makefile-tools",
        "ms-vscode.azure-account",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-azurefunctions"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "none",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "python.testing.pytestEnabled": true
      }
    }
  },
  "postCreateCommand": "git config --global push.autoSetupRemote true && pre-commit install --install-hooks || true",
  "remoteEnv": {
    "FABRIC_WORKSPACE_ID": "${localEnv:FABRIC_WORKSPACE_ID}",
    "FABRIC_TENANT_ID": "${localEnv:FABRIC_TENANT_ID}",
    "AZURE_CLIENT_ID": "${localEnv:AZURE_CLIENT_ID}",
    "AZURE_CLIENT_SECRET": "${localEnv:AZURE_CLIENT_SECRET}",
    "AZURE_TENANT_ID": "${localEnv:AZURE_TENANT_ID}"
  },
  "remoteUser": "vscode"
}
